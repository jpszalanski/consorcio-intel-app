service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper
    function isAdmin() {
       return request.auth != null && (request.auth.token.admin == true || request.auth.token.email == 'jefersonszalanski@gmail.com');
    }

    // Allow uploads to raw-uploads directory
    // Allow uploads to raw-uploads directory
    match /raw-uploads/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if request.auth != null;
    }

    // Default: Deny all others
    match /{allPaths=**} {
      allow read, write: if false; 
    }
  }
}
