rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check admin
    function isAdmin() {
      return request.auth != null && (request.auth.token.admin == true || request.auth.token.email == 'jefersonszalanski@gmail.com');
    }

    // File Imports Control (Frontend reads status, Backend writes)
    match /file_imports_control/{importId} {
      allow read: if request.auth != null;
      allow write: if isAdmin(); // Only admins explicitly (though backend bypasses rules)
    }

    // Consolidated Data (Protected) - If used by legacy views
    match /series_consolidadas/{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    // Users Collection (User can read/write their own data)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default Fallback: Strict
    match /{document=**} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}
