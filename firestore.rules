rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper to check admin
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public Dashboard Data (Read Only)
    match /series_consolidadas/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // All other collections: Protected (Auth required for read, Admin for write)
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
